<?xml version="1.0"?>
<ruleset name="Aeqet_Ucp">
    <description>PHP_CodeSniffer configuration for Aeqet_Ucp module</description>

    <!-- Use Magento 2 coding standard -->
    <rule ref="Magento2">
        <!-- Exclude rules that don't work well with PHP 8.1+ features -->
        <!-- Constructor property promotion causes false positives -->
        <exclude name="Magento2.CodeAnalysis.EmptyBlock.DetectedFunction"/>
        <!-- Typed properties with default values cause parsing issues -->
        <exclude name="Generic.PHP.Syntax.PHPSyntax"/>
    </rule>

    <!-- Line length limits -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Files to scan -->
    <file>.</file>

    <!-- Exclude directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors in output -->
    <arg name="colors"/>
</ruleset>
